<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.librarymanagementsystemui.MainController">
    <top>
        <VBox alignment="CENTER" spacing="10" padding="10">
            <Label text="Library Management System" style="-fx-font-size: 24px;" />
            <HBox alignment="CENTER" spacing="5">
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <Button text="Login" onAction="#handleLogin" />
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" alignment="CENTER"/>
            </HBox>
            <Button fx:id="createPatronButton" text="Create New Patron" onAction="#openCreatePatronPage" />
            <Button fx:id="addBookButton" text="Add Book" onAction="#openAddBookPage" visible="false" />
        </VBox>
    </top>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.librarymanagementsystemui.AddBookController">
    <Label text="Add New Book" style="-fx-font-size: 20px;" />
    <TextField fx:id="titleField" promptText="Title" />
    <TextField fx:id="authorField" promptText="Author" />
    <TextField fx:id="genreField" promptText="Genre" />
    <TextField fx:id="yearField" promptText="Year" />
    <Button text="Submit" onAction="#handleAddBook" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.librarymanagementsystemui.WishlistController" alignment="CENTER" spacing="10">
    <Label text="Wishlist" style="-fx-font-size: 24px;" />

    <!-- Table to display wishlist books -->
    <TableView fx:id="wishlistTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="150" />
            <TableColumn fx:id="genreColumn" text="Genre" prefWidth="150" />
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="150" />
        </columns>
    </TableView>
</VBox>

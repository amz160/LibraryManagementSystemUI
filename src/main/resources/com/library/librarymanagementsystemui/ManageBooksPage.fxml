<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.librarymanagementsystemui.ManageBooksController" alignment="CENTER" spacing="10">
    <Label text="Manage Books" style="-fx-font-size: 24px;"/>

    <!-- Table to display books -->
    <TableView fx:id="booksTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200" />
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="200" />
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200" />
        </columns>
    </TableView>

    <!-- Buttons for managing books -->
    <HBox spacing="10">
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>

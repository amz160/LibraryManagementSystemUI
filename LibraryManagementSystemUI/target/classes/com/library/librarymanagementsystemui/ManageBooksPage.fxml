<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.library.librarymanagementsystemui.ManageBooksController" spacing="15" style="-fx-padding: 20; -fx-alignment: top-center;">
    <Label text="Manage Books" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="booksTable" maxHeight="400" maxWidth="800">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="75" />
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="150" />
            <TableColumn fx:id="genreColumn" text="Genre" prefWidth="100" />
            <TableColumn fx:id="yearColumn" text="Year" prefWidth="75" />
            <TableColumn fx:id="availabilityColumn" text="Availability" prefWidth="100" />
            <TableColumn fx:id="editColumn" text="Edit" prefWidth="75" />
            <TableColumn fx:id="deleteColumn" text="Delete" prefWidth="75" />
        </columns>
    </TableView>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.librarymanagementsystemui.ManagePatronsController" spacing="15" style="-fx-padding: 20; -fx-alignment: top-center;">
    <Label text="Manage Patrons" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="patronsTable" maxHeight="400" maxWidth="750" editable="true">
        <columns>
            <TableColumn fx:id="patronIdColumn" text="Patron ID" prefWidth="80" />
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="160" />
            <TableColumn fx:id="passwordColumn" text="Password" prefWidth="150" />
            <TableColumn fx:id="isLibrarianColumn" text="Librarian Status" prefWidth="100" />
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="120" />
        </columns>
    </TableView>
</VBox>
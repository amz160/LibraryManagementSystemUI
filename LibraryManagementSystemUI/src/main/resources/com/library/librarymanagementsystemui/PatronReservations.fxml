<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.librarymanagementsystemui.PatronReservationsController" spacing="15" style="-fx-padding: 20; -fx-alignment: top-center;">
    <Label text="My Reservations" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="reservationsTable" maxHeight="400" maxWidth="750">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200" />
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="200" />
            <TableColumn fx:id="availabilityColumn" text="Available On" prefWidth="200" />
            <TableColumn fx:id="deleteColumn" text="Remove Book" prefWidth="150" />
        </columns>
    </TableView>
</VBox>
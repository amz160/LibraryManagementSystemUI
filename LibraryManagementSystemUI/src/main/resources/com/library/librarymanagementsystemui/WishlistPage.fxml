<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.librarymanagementsystemui.WishlistController" spacing="15" style="-fx-padding: 20; -fx-alignment: top-center;">
    <Label text="Wishlist" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="wishlistTable" maxHeight="400" maxWidth="650">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200" />
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="200" />
            <TableColumn fx:id="genreColumn" text="Genre" prefWidth="150" />
            <TableColumn fx:id="actionColumn" text="Remove Book" prefWidth="100" />
        </columns>
    </TableView>
</VBox>